extends base

block content 
    div 
        video#preview
        button#actionBtn Start Recording
    form(method="POST",enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumbnail") Thumbnail File 
        input(type="file", accept="image/*", required, id="thumbnail", name="thumbnail")
        input(name="title",placeholder="Title",required, maxlength=80)
        input(name="description",placeholder="Description",required, minlength=20)
        input(name="hashtags",placeholder="hashTag",required)
        input(type="submit")
block scripts
    script(src="/assets/js/recorder.js") 
    